<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/login_line"
    android:gravity="center_horizontal">


    <LinearLayout
        android:id="@+id/login_main_linear"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="40dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:layout_width="162dip"
                android:layout_height="77dip"
                android:text=""
                android:textSize="26sp"
                android:textColor="@color/colorPrimary"
                />

            <ImageView

                android:id="@+id/login_top_image"
                android:layout_width="202dip"
                android:layout_height="117dip"
                android:background="@mipmap/newslogo" />

            <LinearLayout
                android:id="@+id/login_username_linear"
                android:layout_width="fill_parent"
                android:layout_height="37dip"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="60dip"
                android:background="@drawable/textview_aroundborder"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/login_username_imageview"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="7dip"
                    android:background="@mipmap/login_username_bg" />

                <EditText
                    android:id="@+id/login_username_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                    android:gravity="center_vertical"
                    android:hint="enter one user name"
                    android:inputType="none"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_password_linear"
                android:layout_width="fill_parent"
                android:layout_height="37dip"
                android:background="@drawable/textview_aroundborder"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/login_password_imageview"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="7dip"
                    android:background="@mipmap/login_password_bg" />

                <EditText
                    android:id="@+id/login_password_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14dip" />
            </LinearLayout>

            <RadioGroup
                android:visibility="gone"
                android:id="@+id/login_rg"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:checked="true"
                    android:id="@+id/login_rb1"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"/>
                <RadioButton
                    android:id="@+id/login_rb2"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"/>

            </RadioGroup>

            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/login_login_text"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:layout_gravity="center"
                android:background="@drawable/login_buttonaround_bg"
                android:gravity="center"
                android:text="login"
                android:textColor="#FFFFFF"
                android:textSize="16dip" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/login_bottom_linear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_linear_bottom_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/login_message_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dip">



            <TextView
                android:id="@+id/login_regeist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="Register Now"
                android:textColor="@color/colorPrimary"
                android:textSize="14dip" />

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>