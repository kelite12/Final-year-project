<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@mipmap/login_main_bg"
   >


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/regeistImageView"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher"/>



    <LinearLayout
        android:id="@+id/regeist_username_linear"
        android:layout_width="fill_parent"
        android:layout_height="37dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/regist_edit_back"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:background="@mipmap/login_username_bg" />

        <EditText
            android:id="@+id/regeist_username_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
            android:gravity="center_vertical"
            android:hint="输入用户名"
            android:inputType="none"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/regeist_password_linear"
        android:layout_width="fill_parent"
        android:layout_height="37dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/regist_edit_back"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:background="@mipmap/login_username_bg" />

        <EditText
            android:id="@+id/regeist_password_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
            android:gravity="center_vertical"
            android:hint="输入密码"
            android:inputType="none"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/regeist_repassword_linear"
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/regist_edit_back"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:background="@mipmap/login_username_bg" />

        <EditText
            android:id="@+id/regeist_repassword_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
            android:gravity="center_vertical"
            android:hint="再次输入密码"
            android:inputType="none"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/regeist_nickname_linear"
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/regist_edit_back"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:background="@mipmap/login_username_bg" />

        <EditText
            android:id="@+id/regeist_nickname_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"

            android:gravity="center_vertical"
            android:hint="输入昵称"
            android:inputType="none"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/regeist_sex_linear"
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/regist_edit_back"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:background="@mipmap/login_username_bg" />

        <EditText
            android:id="@+id/regeist_sex_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="性别"
            android:inputType="none"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/regeist_age_linear"
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/regist_edit_back"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:background="@mipmap/login_username_bg" />

        <EditText
            android:id="@+id/regeist_age_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:digits="0123456789"
            android:gravity="center_vertical"
            android:hint="输入年龄"
            android:inputType="none"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/regeist_tel_linear"
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/regist_edit_back"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:background="@mipmap/login_username_bg" />

        <EditText
            android:id="@+id/regeist_tel_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:digits="0123456789"
            android:gravity="center_vertical"
            android:hint="电话"
            android:inputType="none"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/regist_edit_back"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:background="@mipmap/login_username_bg" />

        <EditText
            android:id="@+id/regeist_address_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="地址"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/regist_edit_back"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:background="@mipmap/login_username_bg" />

        <EditText
            android:id="@+id/regeist_height_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="身高"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/regist_edit_back"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:background="@mipmap/login_username_bg" />

        <EditText
            android:id="@+id/regeist_weight_edittext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="体重"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/regeist_regeist_text"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_gravity="center"
        android:background="@drawable/login_buttonaround_bg"
        android:gravity="center"
        android:text="立 即 注 册"
        android:textColor="#FFFFFF"
        android:textSize="16dip" />


</LinearLayout>
